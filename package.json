{
  "name": "cinemambiente",
  "author": {
    "name": "Piramid",
    "email": "info@piramid.studio"
  },
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "remix vite:dev",
    "build": "remix vite:build",
    "start": "remix-serve ./build/server/index.js",
    "start-env": "dotenv remix-serve ./build/server/index.js",
    "format": "prettier --write .",
    "format:repo": "npm run format && npm run lint:repo -- --fix",
    "lint": "eslint --max-warnings=0 --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:repo": "npm run lint -- --config .eslintrc.repo.js",
    "start:mocks": "binode --require ./mocks -- @remix-run/serve:remix-serve build",
    "test": "vitest",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
    "typecheck": "tsc",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run",
    "storybook": "storybook dev -p 6006",
    "postinstall": "husky install",
    "generate-types": "graphql-codegen --config graphql.config.yml",
    "generate-all-movies-file": "ts-node ./init/generateAllMovies.mjs",
    "generate-all-movies": "dotenv yarn generate-all-movies-file",
    "generate-all-directors-file": "ts-node ./init/generateAllDirectors.mjs",
    "generate-all-directors": "dotenv yarn generate-all-directors-file",
    "generate-all": "dotenv generate-all-movies && generate-all-directors"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,md,html}": [
      "yarn format:repo",
      "yarn lint:repo"
    ],
    "**/*.css": "yarn prettier --write"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
